/* components/login-model/login-model.wxss */

.login-model {
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  z-index: 99;
}

.login-model-mask {
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.6);
}

.login-model-cont {
  width: 85%;
  position: absolute;
  top: 40%;
  left: 50%;
  border-radius: 8rpx;
  background: #fff;
  transform: translate(-50%, -50%);
}

.login-model-title {
  font-size: 36rpx;
  color: #000;
  font-weight: 500;
  padding: 50rpx 0 30rpx;
  text-align: center;
}

.login-model-content {
  font-size: 32rpx;
  color: #555;
  line-height: 38rpx;
  padding: 10rpx 30rpx 50rpx;
  text-align: center;
}

.login-model-btns {
  display: flex;
  height: 90rpx;
  border-top: 1rpx solid #eee;
}

.login-model-btns navigator {
  flex: 1;
  height: 90rpx;
  line-height: 90rpx;
  border-radius: 0;
  font-size: 32rpx;
  text-align: center;
  color: #666;
  border-right: 1rpx solid #eee;
}

.login-model-btns button {
  flex: 1;
  height: 90rpx;
  line-height: 90rpx;
  font-size: 32rpx;
  padding: 0;
}

.login-model-btns button::after {
  border: none;
  border-radius: none;
  color: #D3A468;
}

.login-model-btns_comfirm {

  background: #fff;
}
