<!--pages/submitComplaint/submitComplaint.wxml-->
<view class="container">
  <view class="submit-complaint-cont">
    <view class="submit-complaint-title">
      <view class="submit-complaint-title_text">内容描述</view>
      <view class="submit-complaint-title_count">{{inputLen}}/200</view>
    </view>
    <view class="submit-complaint-textarea">
      <textarea placeholder="请输入您的反馈..." maxlength="200" bindinput="inputChange"></textarea>
    </view>

    <view class="submit-complaint-btn" bindtap="addPropose">立即提交</view>
  </view>
</view>