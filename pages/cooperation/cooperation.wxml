<!--pages/cooperation/cooperation.wxml-->
<view class="cooperation-wrap">
  <view class="cooperation-info">咨询互动后，留下您的联系方式，我们将第一时间安排专属人员跟您进行联系，进一步了解合作意向与解释合伙规则。</view>
  <view class="cooperation-form">
    <view class="cooperation-form_title">基本信息</view>
    <view class="cooperation-form_item">
      <view class="cooperation-form_item_name is-required">姓名：</view>
      <input class="cooperation-form_item_input" placeholder-class="placeholderStyle" placeholder="请输入您的姓名"></input>
    </view>
    <view class="cooperation-form_item">
      <view class="cooperation-form_item_name is-required">预期经营地区：</view>
      <input class="cooperation-form_item_input" placeholder-class="placeholderStyle" placeholder="请输入所在城市"></input>
    </view>
    <view class="cooperation-form_item">
      <view class="cooperation-form_item_name is-required">预期经营方式：</view>
      <input class="cooperation-form_item_input" placeholder-class="placeholderStyle" placeholder="请输入渠道/场景/销售方式"></input>
    </view>
    <view class="cooperation-form_item">
      <view class="cooperation-form_item_name">推荐人：</view>
      <input class="cooperation-form_item_input" placeholder-class="placeholderStyle" placeholder="请输入推荐人姓名"></input>
    </view>
    <view class="cooperation-form_item">
      <view class="cooperation-form_item_name is-required">手机号码：</view>
      <input class="cooperation-form_item_input" placeholder-class="placeholderStyle" placeholder="请输入您的手机号码" type="number"></input>
    </view>
    <view class="cooperation-form_item">
      <view class="cooperation-form_item_name is-required">验证码：</view>
      <input class="cooperation-form_item_input" placeholder-class="placeholderStyle" placeholder=""></input>
      <view wx:if="{{isGetCode}}" class="get-code-cutdown">{{timer}}s</view>
      <view wx:else class="get-code-btn" bindtap="getCode">获取验证码</view>
    </view>
  </view>

  <view class="comfirm-btn is-disabled">提交</view>
</view>