/* pages/team/team.wxss */

page {
  background: #f7f7f7;
}

.team-header {
  width: 100%;
  height: 370rpx;
  text-align: center;
  background: linear-gradient(90deg, rgba(252, 228, 199, 1), rgba(229, 189, 128, 1));
}

.team-user-wrap {
  padding-top: 50rpx;
}

.team-user-avatar {
  width: 130rpx;
  height: 130rpx;
  margin: 0 auto 20rpx;
  border-radius: 100%;
  overflow: hidden;
  z-index: 1;
}

.team-user-aname {
  font-size: 36rpx;
  color: #333;
  font-weight: 500;
}

.team-slogon-wrap {
  display: flex;
  align-items: center;
  width: 630rpx;
  height: 92rpx;
  padding: 30rpx;
  margin: -76rpx auto 0;
  border-radius: 6rpx;
  background: #fff;
  box-shadow: 0rpx 2rpx 12rpx 0rpx rgba(206, 161, 111, 0.2);
  overflow: hidden;
}

.team-slogon-wrap image {
  width: 72rpx;
  height: 63rpx;
}

.team-slogon-list {
  overflow: hidden;
}

.team-slogon-item {
  flex: 1;
  margin-left: 30rpx;
  overflow: hidden;
}

.team-slogon-item_title {
  font-size: 32rpx;
  font-weight: 500;
  color: #9c6d3b;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.team-slogon-item_desc {
  margin-top: 10rpx;
  font-size: 28rpx;
  color: #9c6d3b;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.team-card-wrap {
  margin-top: 20rpx;
  background: #fff;
}

.team-card-header {
  display: flex;
  align-items: center;
  padding: 30rpx;
}

.team-card-header_title {
  flex: 1;
  font-size: 34rpx;
  font-weight: 500;
  color: #000;
}

.team-card-num {
  height: 44rpx;
  line-height: 44rpx;
  text-align: center;
  padding: 0 10rpx;
  font-size: 26rpx;
  color: #f56742;
  background: #ffece2;
  border-radius: 6rpx;
}

.team-card-more {
  font-size: 24rpx;
  color: #666;
}

.team-poster-wrap {
  width: 100%;
  padding-bottom: 30rpx;
  white-space: nowrap;
}

.team-poster-img {
  width: 242rpx;
  height: 300rpx;
  margin-right: 20rpx;
}

.team-poster-img:first-child {
  margin-left: 30rpx;
}

.team-card-cont {
  padding: 0 30rpx 30rpx;
}

.team-card-complaint-none {
  display: flex;
  align-items: center;
}

.team-card-complaint-none_text {
  flex: 1;
  font-size: 30rpx;
  color: #666;
}

.team-card-complaint-none_btn {
  width: 154rpx;
  height: 62rpx;
  line-height: 62rpx;
  text-align: center;
  font-size: 26rpx;
  color: #d3a468;
  border: 1rpx solid rgba(211, 164, 104, 1);
  border-radius: 6rpx;
}

.team-funeng-list {
  display: flex;
  flex-wrap: wrap;
  padding: 0 20rpx 20rpx;
}

.team-funeng-item {
  width: calc((100% - 40rpx) / 2);
  margin: 0rpx 10rpx 20rpx;
  text-align: center;
  box-shadow: 0rpx 6rpx 12rpx 0rpx rgba(32, 32, 32, 0.04);
  border-radius: 4rpx;
  overflow: hidden;
}

.team-funeng-item_header {
  height: 64rpx;
  line-height: 64rpx;
  font-size: 28rpx;
  text-align: center;
  color: #563603;
  background:linear-gradient(90deg,rgba(252,228,199,1),rgba(229,189,128,1));
}
.team-funeng-item_name {
  display: inline-block;
  font-size: 36rpx;
  padding: 24rpx 30rpx 10rpx;
  border-bottom: 1rpx solid #eee;
}

.team-funeng-item_mobile {
  font-size: 30rpx;
  color: #444;
  padding: 16rpx 0 20rpx;
}