/* pages/contractDetails/contractDetails.wxss */
.contract-details-list {
  margin: 0 30rpx;
}

.contract-details-item {
  display: flex;
  align-items: center;
  height: 145rpx;
  border-bottom: 1rpx solid #eee;
}
.contract-details-item image {
  width:76rpx;
  height: 76rpx;
  border-radius: 100%;
  margin-right: 22rpx;
  overflow: hidden;
}

.contract-details-item_name {
  flex: 1;
  font-size: 32rpx;
  font-weight: 500;
}

.contract-details-item_time {
  font-size: 24rpx;
  color: #999;
  text-align: right;
}

.contract-details-item_time_date {
  font-size: 28rpx;
  color: #222;
  margin-bottom: 4rpx;
}