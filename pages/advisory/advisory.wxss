/* pages/advisory/advisory.wxss */

.advisory-wrap {
  padding: 40rpx 30rpx;
}

.advisory-title {
  font-size: 34rpx;
  color: #000;
  font-weight: 500;
}

.advisory-step-wrap {
  margin-top: 34rpx;
  padding: 40rpx 20rpx;
  border-radius: 4rpx;
  border: 1rpx solid rgba(246, 246, 246, 1);
  box-shadow: 0rpx 6rpx 14rpx 0rpx rgba(48, 48, 48, 0.04);
}

.advisory-step {
  display: flex;
}

.advisory-step-item {
  position: relative;
  width: calc((100% - 110rpx) / 3);
  margin-bottom: 48rpx;
}

.advisory-step-item.is-done .advisory-step-item_num_line {
  border-top: 4rpx solid #ffd9a9;
}

.advisory-step-item.is-done .advisory-step-item_num {
  color: #333;
  background: #ffd9a9;
}

.advisory-step-item.is-active .advisory-step-item_num_line,
.advisory-step-item.is-active .advisory-step-item_num_last_line {
  border-top: 4rpx dotted #ffd9a9;
}

.advisory-step-item.is-active .advisory-step-item_num {
  transform: scale(1.1);
  color: #333;
  background: linear-gradient(-45deg, rgba(211, 164, 104, 1), rgba(255, 217, 169, 1));
  z-index: 2;
}

.advisory-step-item_num {
  width: 50rpx;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  border-radius: 100%;
  color: #bbb;
  background: #f2f2f2;
}

.advisory-step-item_num_cont {
  display: flex;
  align-items: center;
}

.advisory-step-item_num_line {
  flex: 1;
  /* height: 4rpx; */
  border-top: 4rpx solid #f2f2f2;
  /* background: #f2f2f2; */
}

.advisory-step-item_num_last_line {
  position: absolute;
  right: -30rpx;
  top: 23rpx;
  width: 30rpx;
  border-top: 4rpx solid #f2f2f2;
}

.advisory-step-item.is-done .advisory-step-item_num_last_line {
  border-top: 4rpx solid #ffd9a9;
}

.advisory-step-item_text {
  position: absolute;
  bottom: -56rpx;
  right: -70rpx;
  width: 150rpx;
  font-size: 28rpx;
  color: #666;
  margin-top: 18rpx;
}

.advisory-step-item_first {
  width: 80rpx;
}

.advisory-question-wrap {
  margin-top: 70rpx;
}

.advisory-question-title {
  display: flex;
  align-items: center;
  margin-bottom: 12rpx;
}

.advisory-question-text {
  flex: 1;
  font-size: 34rpx;
  color: #000;
  font-weight: 500;
}

.advisory-question-change {
  font-size: 26rpx;
  color: #d3a468;
}

.advisory-question-change image {
  width: 22rpx;
  height: 22rpx;
  margin-left: 10rpx;
}

.advisory-question-item {
  font-size: 32rpx;
  padding: 32rpx 0;
  color: #000;
  border-bottom: 1rpx solid #eee;
  /* overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis; */
}

.advisory-business-plan-wrap {
  margin-top: 38rpx;
  border-radius: 4rpx;
  overflow: hidden;
  border: 1rpx solid rgba(246, 246, 246, 1);
  box-shadow: 0rpx 6rpx 14rpx 0rpx rgba(48, 48, 48, 0.04);
}

.advisory-business-plan-wrap image {
  width: 100%;
  border-radius: 4rpx 4rpx 0 0;
}

.advisory-business-plan-cont {
  padding: 30rpx 18rpx 58rpx;
}

.advisory-business-plan-title {
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
}

.advisory-business-plan-desc {
  margin-top: 6rpx;
  font-size: 30rpx;
  line-height: 48rpx;
  color: #555;
}

.advisory-business-plan-book {
  margin-top: 40rpx;
  font-size: 30rpx;
  color: #D5A970;
  text-decoration: underline;
}
.advisory-business-plan-check {
  display: flex;
  align-items: center;
  font-size: 28rpx;
  margin-top: 90rpx;
  color: #999;
}
.advisory-business-plan-check checkbox .wx-checkbox-input {
  width: 34rpx;
  height: 34rpx; 
  margin-right: 20rpx;
}

.advisory-business-plan-btn {
  width: 400rpx;
  height: 82rpx;
  line-height: 82rpx;
  margin: 40rpx auto 0;
  text-align: center;
  font-size: 30rpx;
  color: #999;
  background: #FCE6CB;
  border-radius: 41rpx;
}
.advisory-business-plan-btn.is-disabled {
  color: #fff;
  background: #E0E0E0;
}

.advisory-business-plan-done {
  text-align: center;
  color: #555;
}