/* pages/advisory/advisory.wxss */

.advisory-wrap {
  padding: 40rpx 30rpx;
}

.advisory-title {
  font-size: 34rpx;
  color: #000;
  font-weight: 500;
}

.advisory-step-wrap {
  margin-top: 34rpx;
  padding: 40rpx 20rpx;
  border-radius:4rpx;
  border: 1rpx solid rgba(246, 246, 246, 1);
  box-shadow: 0rpx 6rpx 14rpx 0rpx rgba(48, 48, 48, 0.04);
}
.advisory-step {
  display: flex;
}
.advisory-step-item {
  position: relative;
  width: calc((100% - 110rpx) / 3);
  margin-bottom: 48rpx;
}

.advisory-step-item.is-done .advisory-step-item_num_line {
  border-top: 4rpx solid #FFD9A9;
}
.advisory-step-item.is-done .advisory-step-item_num {
  color: #333;
  background: #FFD9A9;
}
.advisory-step-item.is-active .advisory-step-item_num_line, .advisory-step-item.is-active .advisory-step-item_num_last_line {
  border-top: 4rpx dotted #FFD9A9;
}
.advisory-step-item.is-active .advisory-step-item_num {
  transform: scale(1.1);
  color: #333;
  background:linear-gradient(-45deg,rgba(211,164,104,1),rgba(255,217,169,1));
  z-index: 2;
}
.advisory-step-item_num {
  width: 50rpx;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  border-radius: 100%;
  color: #bbb;
  background: #f2f2f2;
}

.advisory-step-item_num_cont {
  display: flex;
  align-items: center;
}

.advisory-step-item_num_line {
  flex: 1;
  /* height: 4rpx; */
  border-top: 4rpx solid #f2f2f2;
  /* background: #f2f2f2; */
}

.advisory-step-item_num_last_line {
  position: absolute;
  right: -30rpx;
  top: 23rpx;
  width: 30rpx;
  border-top: 4rpx solid #f2f2f2;
}

.advisory-step-item_text {
  position: absolute;
  bottom: -56rpx;
  right: -70rpx;
  width: 150rpx;
  font-size: 28rpx;
  color: #666;
  margin-top: 18rpx;
}

.advisory-step-item_first {
  width: 80rpx;
}


.advisory-question-wrap {
  margin-top: 70rpx;
}
.advisory-question-title {
  display: flex;
  align-items: center;
  margin-bottom: 12rpx;
}
.advisory-question-text {
  flex: 1;
  font-size: 34rpx;
  color: #000;
  font-weight: 500;
}

.advisory-question-change {
  font-size: 26rpx;
  color: #D3A468;
}
.advisory-question-change image {
  width: 22rpx;
  height: 22rpx;
  margin-left: 10rpx;
}

.advisory-question-item {
  font-size: 32rpx;
  padding: 32rpx 0;
  color: #000;
  border-bottom: 1rpx solid #eee;
  /* overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis; */
}