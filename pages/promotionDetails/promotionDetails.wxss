/* pages/promotionDetails/promotionDetails.wxss */

.promotion-details-header {
  width: 100%;
  height: 532rpx;
  text-align: center;
  background: linear-gradient(to bottom, rgba(229, 189, 128, 1), rgba(229, 189, 128, 0));
}

.promotion-details-header image {
  display: block;
  width: 300rpx;
  height: 227rpx;
  margin: 0 auto 0;
  padding-top: 40rpx;
}

.promotion-details-list {
  margin: -220rpx 26rpx 0;
  background: #fff;
  box-shadow: 0rpx 6rpx 12rpx 0rpx rgba(0, 0, 0, 0.04);
  border-radius: 6rpx;
}

.promotion-details-item {
  margin: 0 30rpx;
  height: 105rpx;
  display: flex;
  align-items: center;
  font-size: 30rpx;
  color: #333;
  border-bottom: 1rpx solid #eee;
}
.promotion-details-item:last-child {
  border: none;
}

.promotion-details-item_name {
  flex: 1;
}

.promotion-details-item_num {
  position: relative;
  padding-right: 30rpx;
}
.promotion-details-item_num image {
  width: 30rpx;
  height: 30rpx;
  position: absolute;
  top: 8rpx;
  right: -4rpx;
}