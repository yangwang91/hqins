<!--pages/promotionDetails/promotionDetails.wxml-->
<view class="container">
  <view class="promotion-details-header">
    <image src="{{promotion_details_img}}" mode="aspectFit"></image>
  </view>

  <view class="promotion-details-list">
    <view class="promotion-details-item" data-type="1" bindtap="toContractDetails">
      <view class="promotion-details-item_name">经营测算：</view>
      <view class="promotion-details-item_num">{{result.cesuan}}人
        <image mode="aspectFit" src="../../assets/icons/right_allow_icon.svg"></image>
      </view>
    </view>
    <view class="promotion-details-item" data-type="2" bindtap="toContractDetails">
      <view class="promotion-details-item_name">商业设计：</view>
      <view class="promotion-details-item_num">{{result.sysj}}人
        <image mode="aspectFit" src="../../assets/icons/right_allow_icon.svg"></image>
      </view>
    </view>
    <view class="promotion-details-item" data-type="3" bindtap="toContractDetails">
      <view class="promotion-details-item_name">项目路演：</view>
      <view class="promotion-details-item_num">{{result.gcjl}}人
        <image mode="aspectFit" src="../../assets/icons/right_allow_icon.svg"></image>
      </view>
    </view>
    <view class="promotion-details-item" data-type="4" bindtap="toContractDetails">
      <view class="promotion-details-item_name">合作签约：</view>
      <view class="promotion-details-item_num">{{result.hzqy}}人
        <image mode="aspectFit" src="../../assets/icons/right_allow_icon.svg"></image>
      </view>
    </view>
  </view>
</view>