/* pages/product/product.wxss */
page {
  background: #f7f7f7;
}
.product-banner-wrap {
  position: relative;
}
.product-banner {
  width: 100%;
  height: 320rpx;
}

.product-banner image {
  width: 100%;
  height: 100%;
}

.product-banner-dots {
  position: absolute;
  display: flex;
  left: 50%;
  bottom: 6rpx;
  transform: translateX(-50%);
}
.product-banner-dot {
  display: inline-block;
  width: 8rpx;
  height: 3rpx;
  margin: 0 2rpx;
  border-radius: 2rpx;
  background: #B9B9B9;
}

.product-banner-dot.active {
  width: 14rpx;
  background: #E99E3E;
}

.tech-platform-wrap {
  display: flex;
  align-items: center;
  /* width: 100%; */
  /* height: 103rpx; */
  padding: 20rpx 20rpx 20rpx 30rpx;
  margin-top: 20rpx;
  background: #fff;
}

.tech-platform-wrap image {
  width: 38rpx;
  height: 38rpx;
}
.tech-platform-wrap .text {
  flex: 1;
  font-size: 32rpx;
  color: #444;
  font-weight: 500;
}

.insurance-products-wrap {
  margin-top: 20rpx;
  background: #fff;
}
.insurance-products-tabs-wrap {

}
.insurance-products-title {
  padding: 40rpx 30rpx 12rpx;
  font-size: 34rpx;
  color: #000;
}
.insurance-products-tabs {
  width: 100%;
  /* display: flex; */
  white-space: nowrap;
}

.insurance-products-tab {
  display: inline-block;
  margin: 0 20rpx 0 30rpx;
  padding: 20rpx 0 28rpx;
  font-size: 30rpx;
  color: #666;
  font-weight: 500;
}
.insurance-products-tab.active {
  color: #D3A468;
}


.insurance-products-list {
  border-top: 1rpx solid #eee;
}
