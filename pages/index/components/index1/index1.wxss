/* pages/index/components/index1/index1.wxss */
.index_wrap{
  background: #fff;
  min-height: 100%;
}
.banner-wrap {
  font-size: 0;
}

.banner-wrap image {
  width: 100%;
  z-index: 1;
}

.jion-us-wrap {
  position: relative;
  /* width: 100%; */
  display: flex;
  align-items: center;
  padding: 0 30rpx;
  height: 148rpx;
  border-radius: 26rpx;
  margin-top: -26rpx;
  background: #fff;
  box-shadow: 0px 6rpx 20rpx 0px rgba(28, 28, 28, 0.05);
  z-index: 2;
}

.jion-us-wrap image {
  width: 72rpx;
  height: 80rpx;
}
.jion-us-wrap swiper {
  flex: 1;
  height: 90rpx;
}
.jion-us-text {
  flex: 1;
  margin-left: 24rpx;
  font-size: 28rpx;
  color: #000;
}

.jion-us-text text {
  padding: 0 8rpx;
  line-height: 46rpx;
}

.jion-us-show {
  width: 110rpx;
  height: 44rpx;
  line-height: 44rpx;
  text-align: center;
  font-size: 28rpx;
  color: #fff;
  background: rgba(220, 176, 119, 1);
  border-radius: 22rpx;
}

.index-video-wrap {
  width: 690rpx;
  height: 388rpx;
  padding: 0 30rpx;
  margin: 70rpx auto 0;
}
.index-video-con{
  position: relative;
  width: 100%;
  height: 100%;
}
.index-video-wrap video {
  width: 100%;
  height: 100%;
  border-radius: 10rpx;
}
.cover{
  width:100%;
  height: 100%;
  border-radius: 10rpx;
  position: absolute;
  left: 0;
  top:0;
}
.cover image{
  width: 100%;
  height: 100%;
  border-radius: 10rpx;
}
.support-wrap {
  padding: 0 30rpx;
  margin-top: 65rpx;
}

.support-title {
  font-size: 36rpx;
  font-weight: 500;
  color: #000;
  text-align: center;
}

.support-list {
  display: flex;
  flex-wrap: wrap;
  margin-top: 50rpx;
}

.support-item {
  width: 50%;
  text-align: center;
  margin-bottom: 58rpx;
}

.support-item_img {
  width: 140rpx;
  height: 140rpx;
  margin: 0 auto;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 1rpx solid rgba(246, 246, 246, 1);
  box-shadow: 0rpx 6rpx 14rpx 0rpx rgba(48, 48, 48, 0.04);
  border-radius: 50%;
}

.support-item_img image {
  max-width: 54rpx;
  max-height: 54rpx;
}

.support-item_title {
  font-size: 34rpx;
  font-weight: 400;
  margin: 30rpx 0 20rpx;
  color: #030303;
}

.support-item_desc {
  font-size: 28rpx;
  font-weight: 400;
  padding: 0 40rpx;
  color: #666;
}

.partner-warp {
  padding: 0 30rpx;
}

.partner-title {
  font-size: 36rpx;
  color: #000;
  text-align: center;
  font-weight: 500;
}

.partner-list {
  margin-top: 50rpx;
}

.partner-item {
  display: flex;
  align-items: stretch;
  padding: 26rpx 58rpx 26rpx 30rpx;
  margin-bottom: 32rpx;
  background: #fefefe;
  border: 1rpx solid rgba(246, 246, 246, 1);
  box-shadow: 0rpx 6rpx 10rpx 0rpx rgba(48, 48, 48, 0.03);
  border-radius: 8rpx;
}

.partner-item-img {
  width: 280rpx;
  height: 180rpx;
  font-size: 0;
}

.partner-item_center {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  margin-left: 35rpx;
}

.partner-item_center_title {
  font-size: 32rpx;
  color: #000;
  font-weight: 500;
}

.partner-item_center_tag {
  width: 193rpx;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  margin-top: 10rpx;
  font-size: 28rpx;
  color: #666;
  border-radius: 4rpx;
  border: 1rpx solid rgba(187, 187, 187, 1);
}

.partner-item_arrow {
  width: 18rpx;
  height: 33rpx;
  align-self: center;
}

.recruitment-wrap {
  position: relative;
  margin: 0 30rpx;
  /* padding: 30rpx 20rpx; */
  border: 1rpx solid rgba(247, 247, 247, 1);
  box-shadow: 0rpx 6rpx 14rpx 0rpx rgba(48, 48, 48, 0.04);
  overflow: hidden;
  border-radius: 6rpx;
}

.recruitment-back-img {
  position: absolute;
  right: -35rpx;
  bottom: -35rpx;
  width: 150rpx;
  height: 150rpx;
}

.recruitment-title {
  font-size: 36rpx;
  font-weight: 500;
  padding-top: 38rpx;
  margin-bottom: 40rpx;
  text-align: center;
  color: #000;
}

.recruitment-desc {
  font-size: 28rpx;
  text-align: center;
  margin-top: 20rpx;
  margin-bottom: 40rpx;
  padding: 0 50rpx;
  font-weight: 400;
  color: rgba(102, 102, 102, 1);
  line-height: 42rpx;
}
.recruitment-list {
  display: flex;
  padding: 0 30rpx;
  align-items: center;
}
.recruitment-item {
  display: flex;
  width: 33.33%;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  color: #D3A468;
}
.recruitment-item image {
  max-width: 38rpx;
  max-height: 38rpx;
  margin-right: 16rpx;
}

.recruitment-line {
  display: block;
  width: 95%;
  height: 1rpx;
  margin: 30rpx auto;
  background: #eee;
}

.recruitment-example-list {
  padding: 30rpx;
  margin-top: 46rpx;
  background: #FAFAFA;
}
.recruitment-example-list_text {
  font-size: 28rpx;
  margin-bottom: 26rpx;
  color: #666;
}

.recruitment-example-item {
  font-size: 30rpx;
  color: #333;
  margin: 20rpx 0;
}

.recruitment-example-item text {
display: inline-block;
width: 34rpx;
height: 34rpx;
line-height: 34rpx;
font-size: 32rpx;
margin-right: 22rpx;
text-align: center;
color: #fff;
background: #BFBFBF;
font-weight: 200;
}

.jion-tips-wrap {
  padding: 0 30rpx;
}

.jion-tips-title {
  font-size: 36rpx;
  margin-top: 70rpx;
  margin-bottom: 40rpx;
  color: #000;
  text-align: center;
  font-weight: 500;
}


.jion-tips-item-con {
  position: relative;
  padding-left: 42rpx;
  padding-top: 18rpx;
overflow: hidden;

}

.jion-tips-item {
  margin-bottom: 40rpx;
}
.jion-tips-line {
  position: absolute;
  top: -80rpx;
  left: 10rpx;
  width: 1rpx;
  height: 100%;
  background: #ddd;
}
.jion-tips-item_title {
  position: relative;
  font-size: 32rpx;
  color: #000;
  margin-bottom: 16rpx;
}

.jion-tips-item_dot {
  display: inline-block;
  position: absolute;
  top: 14rpx;
  left: -40rpx;
  width: 16rpx;
  height: 16rpx;
  border-radius: 100%;
  background: #DCB077;
}

.jion-tips-item_desc {
  font-size: 28rpx;
  color: #777;
}

