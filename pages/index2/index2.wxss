/* pages/index2/index2.wxss */
page{
  background: #F7F7F7
}
.index2-banner-wrap{
  height: 320rpx;
  margin: 20rpx 0;
}
.banner_swiper{
  height: 100%;
}
.swiper_item{
  display: flex;
  align-items: center;
  justify-content: center;
}
.swiper_item_view{
  width: 690rpx;
  height: 100%;
  overflow: hidden;
  border-radius: 8rpx;
}
.swiper_item_view image {
  width: 100%;
  height: 100%;
}
.common_con{
  background: #ffffff;
  padding: 0 30rpx 40rpx;
  margin:20rpx 0;
}
.common_tit{
  font-size:34rpx;
  font-weight: 500;
  color:#000;
  height: 112rpx;
  line-height: 112rpx;
}
.service_big_box{
  display: flex;
  align-items: center;
}
.service_left{
  padding-right: 20rpx;
}
.service_left image{
  width: 300rpx;
  height: 364rpx;
}
.service_right image{
  width:370rpx;
  height: 172rpx;
}
.service_right_1{
  margin-bottom: 12rpx;
}
.sales_con{
  padding: 0 30rpx 10rpx;
}
.sales_tit{
  font-size:34rpx;
  font-weight: 500;
  color:#000;
  padding-top: 30rpx;
  height: 40rpx;
  line-height: 40rpx;
}
.sales_ranking{
  display: flex;
  align-items: center;
  justify-content:space-between;
  border-bottom: 1px solid #eee;
  padding:30rpx 0;
}
.sales_ranking:last-child{
  border:none;
}
.sales_ranking_left{
  width: 420rpx;
  display: flex;
  align-items: center;
}
.sales_ranking_left .text1{
  width: 40rpx;
  height: 32rpx;
  line-height: 32rpx;
  background:#C8C8C8;
  font-size: 26rpx;
  color:#ffffff;
  font-weight: 500;
  text-align: center;
}
.sales_ranking:nth-of-type(1) .sales_ranking_left .text1{
  background: #F24549;
}
.sales_ranking:nth-of-type(2) .sales_ranking_left .text1{
  background: #F86E22;
}
.sales_ranking:nth-of-type(3) .sales_ranking_left .text1{
  background: #FEAC36;
}
.sales_ranking_left .text2{
  font-size: 30rpx;
  font-weight: 400;
  color: #000;
  line-height: 1.5;
  padding-left: 20rpx;
}
.sales_ranking_right{
  color:#FA7F49;
  font-weight: 500;
}
.sales_ranking_right .text1{
  font-size:32rpx;
}
.sales_ranking_right .text2{
  font-size:22rpx;
}


